<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@android:drawable/ic_menu_manage"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/ic_menu_manage"
        android:supportsRtl="true"
        android:theme="@style/Theme.VitalSignPatientManager"
        tools:targetApi="31">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.VitalSignPatientManager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".PatientDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.VitalSignPatientManager"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".AddPatientActivity"
            android:exported="false"
            android:theme="@style/Theme.VitalSignPatientManager"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".FullscreenTimelineActivity"
            android:exported="false"
            android:theme="@style/Theme.VitalSignPatientManager"
            android:parentActivityName=".PatientDetailActivity" />
            
    </application>

</manifest>
